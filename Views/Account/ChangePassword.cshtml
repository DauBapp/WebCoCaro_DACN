@model Web_chơi_cờ_Caro.Controllers.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="login-form">
                <div class="text-center mb-4">
                    <div class="login-icon mb-3">
                        <i class="fas fa-key fa-4x" style="color: #667eea; animation: iconFloat 3s ease-in-out infinite;"></i>
                    </div>
                    <h2 class="fw-bold" style="color: #333; margin-bottom: 10px;">Đổi mật khẩu</h2>
                    <p class="text-muted">Vui lòng nhập mật khẩu hiện tại và mật khẩu mới</p>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label fw-semibold">
                            <i class="fas fa-lock me-2" style="color: #667eea;"></i>Mật khẩu hiện tại
                        </label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label fw-semibold">
                            <i class="fas fa-key me-2" style="color: #667eea;"></i>Mật khẩu mới
                        </label>
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Tối thiểu 6 ký tự" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <small class="text-muted">Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                            <i class="fas fa-lock me-2" style="color: #667eea;"></i>Xác nhận mật khẩu mới
                        </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn w-100 fw-bold mb-3">
                        <i class="fas fa-save me-2"></i>Đổi mật khẩu
                    </button>
                    
                    <div class="text-center">
                        <a href="@Url.Action("Profile", "Account")" style="color: #667eea; text-decoration: none; font-weight: 600;">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại trang cá nhân
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes iconFloat {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }
    
    .login-icon {
        animation: fadeInDown 0.8s ease-out;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

