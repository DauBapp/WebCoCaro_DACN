<script>
    // Toast notification functions
    function ensureToastOnBody() {
        const toast = document.getElementById('toastNotification');
        if (toast && toast.parentElement !== document.body) {
            document.body.appendChild(toast);
        }
        // Position below navbar if present
        const nav = document.querySelector('.navbar');
        if (toast) {
            const baseTop = 10;
            const navHeight = nav ? Math.ceil(nav.getBoundingClientRect().height) : 0;
            toast.style.top = (navHeight + baseTop) + 'px';
            toast.style.right = '20px';
        }
    }

    function showToastNotification(message, iconClass = 'fa-info-circle') {
        const toast = document.getElementById('toastNotification');
        const toastMessage = document.getElementById('toastMessage');
        const toastIcon = document.getElementById('toastIcon');
        
        if (!toast || !toastMessage || !toastIcon) return;
        
        // Ensure on top-level and positioned correctly
        ensureToastOnBody();
        
        toastMessage.textContent = message;
        toastIcon.className = 'fas ' + iconClass;
        
        // Reset animation
        const progress = toast.querySelector('.toast-progress');
        if (progress) {
            progress.style.animation = 'none';
            setTimeout(() => {
                progress.style.animation = 'toastProgress 4s linear forwards';
            }, 10);
        }
        
        toast.classList.add('show');
        
        // Auto close after 4 seconds
        setTimeout(() => {
            closeToastNotification();
        }, 4000);
    }

    function closeToastNotification() {
        const toast = document.getElementById('toastNotification');
        if (toast) {
            toast.classList.remove('show');
        }
    }

    // Reposition on window resize to keep below navbar
    window.addEventListener('resize', ensureToastOnBody);

    // Override setAILevel to use toast instead of alert
    const originalSetAILevel = window.setAILevel;
    if (originalSetAILevel) {
        window.setAILevel = function(level) {
            originalSetAILevel(level);
            const levelName = level === 'medium' ? 'Trung b√¨nh' : 'Kh√≥';
            const iconClass = level === 'medium' ? 'fa-chart-line' : 'fa-trophy';
            showToastNotification(`AI ƒë√£ chuy·ªÉn sang m·ª©c ƒë·ªô: ${levelName}`, iconClass);
        };
    }

    // Ensure placement on initial load
    document.addEventListener('DOMContentLoaded', ensureToastOnBody);
</script>

